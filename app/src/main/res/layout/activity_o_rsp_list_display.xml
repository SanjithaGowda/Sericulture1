<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.sanjithagowda.sericulture.o_rsp_list_display">


<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
    android:layout_gravity="center"
        android:text="RSP member details"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <RadioButton android:id="@+id/mem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member1"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/reg1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:ems="10"
            android:textColor="@android:color/black"
            android:text="is011" />
        <ImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"

    android:layout_weight="1"
    android:src="@drawable/logo"
        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <RadioButton android:id="@+id/mem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member2"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/reg2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:ems="10"
            android:textColor="@android:color/black"
            android:text="is012" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:src="@drawable/logo"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <RadioButton android:id="@+id/mem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member3"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/reg3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:ems="10"
            android:textColor="@android:color/black"
            android:text="is013" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:src="@drawable/logo"
            />


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"

        android:layout_marginTop="2dp"
        android:onClick="submit"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Next" />


</LinearLayout>
</ScrollView>